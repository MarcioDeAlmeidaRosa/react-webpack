{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"react"
	],
	"extends": [
		"semistandard",
		"plugin:react/recommended"
	],
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"no-extra-semi": "error",
		"react/prop-types": "off"
	}
}